@using CoolPrivilegeControlVM.EntityVM
@using CoolPrivilegeControlLangPack
@using UI_Infrastructure.CustomHtmlHelper

@model LoginUserVM

@{
    ViewBag.Title = Html.MultilingualHtml("LoginScreenTitle");
    Layout = "~/Areas/AccessControl/Views/Shared/_LoginLayout.cshtml";
}


<div class="row center-block" style="text-align:center;background-color: black; height:5px; margin-top:3px;">
    <img src="~/Content/imgs/_blank.bmp" style="height:0px;  width:0px;display:none;" />
</div>

<div class="row center-block" style="text-align:center; background-color: rgb(22, 51, 97);">
    <span style="color:#FFF;">Cool Privilege Control System</span>
</div>
<div class="row center-block" style="margin-top:15px;">
    @using (Html.BeginForm("Index", "Login", null, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-xs-12 col-md-12">
            <div class="form-group has-feedback has-feedback-left">
                <label class="control-label col-xs-12 col-sm-3 col-sm-offset-1">@Html.MultilingualHtml("LoginName")</label>
                <div class="col-xs-12 col-sm-6">
                    @Html.TextBoxFor(model => model.LoginName, new { @class = "form-control input-md", @placeholder = Html.MultilingualHtml("LoginName") })
                    <i class="form-control-feedback glyphicon glyphicon-user "></i>
                </div>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label class="control-label col-xs-12 col-sm-3 col-sm-offset-1">@Html.MultilingualHtml("LoginPwd")</label>
                <div class="col-xs-12 col-sm-6">
                    @Html.PasswordFor(model => model.LoginPwd, new { @class = "form-control input-md", @placeholder = Html.MultilingualHtml("LoginPwd") })
                    <i class="form-control-feedback glyphicon glyphicon-asterisk "></i>
                </div>
            </div>
            <div class="form-group has-feedback has-feedback-left">
                <label class="control-label col-xs-12 col-sm-3 col-sm-offset-1">@Html.MultilingualHtml("Language")</label>
                <div class="col-xs-12 col-sm-6">
                    @Html.DropDownList("LangsID", (SelectList)ViewBag.Langs, new { @class = "form-control", onchange = "document.location.href = '/AccessControl/Login?str_Language=' + this.options[this.selectedIndex].value;" })
                </div>
            </div>

            <div class="form-group has-feedback has-feedback-left">
                <div class="col-xs-3 col-xs-offset-4 col-sm-3 col-sm-offset-4">
                    <i class="form-control-feedback glyphicon glyphicon-log-in white"></i>
                    <input type="submit" class="btn btn-primary" value="&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@Html.MultilingualHtml("Login")" />
                </div>

                <div class="col-xs-2 col-md-2">
                </div>
            </div>
        </div>
    }
</div>
<div class="row center-block" style="text-align:center;background-color: black; height:5px;">
    <img src="~/Content/imgs/_blank.bmp" style="height:0px; width:0px; display:none;" />
</div>
